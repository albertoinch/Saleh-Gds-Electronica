doctype html
html
    head
        title= title
        meta(charset='utf-8')
        style(type='text/css').
            @page {
                size: Letter;
                margin: 0;
            }
            @media screen {
                html, body {
                    width: 279mm;
                    height: 216mm;
                    margin: 0mm;
                }
            }
            body {
                font-size: 100%;
            }
            table {
                width: 100%;
                border-collapse: collapse;
                font-size: 80%;
            }
            thead {
                display: table-header-group;
            }
            tr {
                page-break-inside: avoid;
            }
            th {
                padding: 3px;
            }
            td {
                padding: 3px;
            }
            .container {
                width: 70%;
            }
            .anulado {
                background-image: url("data:image/png;base64,");
            }
    - var myStyle = (estado == 'ANULADO' ? 'anulado' : '')
    body(class=myStyle)
        div(style="width: 100%")
            div
                div(style="display:inline-block; width: 40%; height: 13em; text-align: center")
                    div
                        strong ADSIB
                    div
                        if datos.facturaElectronicaTasaCero.cabecera.codigoSucursal == 0
                            strong Casa Matriz
                        else
                            strong Sucursal No. #{datos.facturaElectronicaTasaCero.cabecera.codigoSucursal}
                    div No. Punto de Venta #{datos.facturaElectronicaTasaCero.cabecera.codigoPuntoVenta}
                    div #{datos.facturaElectronicaTasaCero.cabecera.direccion}
                    div &nbsp;
                    div #{datos.facturaElectronicaTasaCero.cabecera.telefono}
                    div La Paz
                div(style="float: right; width: 30%;")
                    div
                        strong NIT:
                        span #{datos.facturaElectronicaTasaCero.cabecera.nitEmisor}
                    div
                        strong FACTURA N°:
                        span #{datos.facturaElectronicaTasaCero.cabecera.numeroFactura}
                    div(style="word-wrap: break-word;")
                        strong CÓD. AUTORIZACIÓN:
                        span(style="font-size: 0.8em;") #{datos.facturaElectronicaTasaCero.cabecera.cuf}

                div(style="text-align: center;")
                    p(style="font-size: 1.5em; font-weight: bold; margin: 0px") FACTURA TASA CERO - VENTA DE LIBROS O TRANSPORTE DE CARGA INTERNACIONAL
                    p (Sin Derecho a Crédito Fiscal)
                div(style="margin-top:1.5em")
                    div(style="display:inline-block; width: 50%; height: 5em;")
                        div
                            strong Lugar y Fecha:
                            span La Paz, #{fecha}
                        div
                            div
                                strong Nombre/Razón Social:
                                span #{datos.facturaElectronicaTasaCero.cabecera.nombreRazonSocial}
                    div(style="float: right; width: 30%; word-wrap: break-word;")
                        div
                            strong NIT/CI/CEX:
                            span #{datos.facturaElectronicaTasaCero.cabecera.numeroDocumento}
                        div
                            strong Código de cliente:
                            span #{datos.facturaElectronicaTasaCero.cabecera.codigoCliente}   
        br
        div(style="width: 100%; clear: both")
            table(width="100%", border="1px solid black", style="border-collapse: collapse")
                thead(style = "background-color: #BDC2CB")
                    tr
                        th Código Producto
                        th Cantidad
                        th Descripción
                        th Precio Unitario
                        th SUBTOTAL
                tbody
                    each item, i in datos.facturaElectronicaTasaCero.detalle
                        tr
                            td(style="padding-bottom: 10px") #{item.codigoProducto}
                            td(style="padding-bottom: 10px") #{item.cantidad}
                            td(style="padding-bottom: 10px") #{item.descripcion}
                            td(style="text-align: right") #{item.precioUnitario}
                            td(style="text-align: right") #{item.subTotal}
        br
        div(style="width: 100%; clear: both")
            div(style="display: inline-block; height: 8em; width: 60%;")
                strong Son: #{literal}
            div(style="width: 40%; float: right;")
                table(width="100%", border="1px solid black")
                    tr
                        td(style="text-align: left;")
                            strong TOTAL Bs.:
                        td(style="text-align: right;") #{monto} #{datos.facturaElectronicaTasaCero.cabecera.montoTotalMoneda}
                    tr
                        td(style="text-align: left;")
                            strong Importe Base para Crédito Fiscal:
                        td(style="text-align: right;") #{datos.facturaElectronicaTasaCero.cabecera.montoTotalSujetoIva}

        div(style="width: 100%; text-align: center; font-size: 100%;") "ESTA FACTURA CONTRIBUYE AL DESARROLLO DEL PAÍS. EL USO ILÍCITO DE ÉSTA SERÁ SANCIONADO PENALMENTE DE ACUERDO A LEY"
        br
        div(style="width: 100%; text-align: center; font-size: 100%;") #{datos.facturaElectronicaTasaCero.cabecera.leyenda}
        br
        if tipo_emision == 1
            div(style="width: 100%; text-align: center; font-size: 100%;") Este documento es la Representación Gráfica de un Documento Fiscal Digital emitido en una Modalidad de Facturación en Línea
        else
            div(style="width: 100%; text-align: center; font-size: 100%;") Este documento  es  la  Representación  Gráfica  de  un  Documento Fiscal Digital emitido fuera de línea, verifique su envío con su proveedor o en la página web www.impuestos.gob.bo
        div &nbsp;
        div &nbsp;
        div(style="width: 100%; clear: both")
            div(style="width: 58%; float: right;")
                div(style="width: 157px; border-style: solid; border-width: 1px")
                    img(src="data:image;base64," + qr, style="width: 155px; height: 155px;")
